{
  "name": "guestsvalencia",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "netlify dev",
    "build": "echo \"No build step\"",
    "test": "playwright test",
    "test:smoke": "playwright test --grep smoke-tests",
    "test:contract": "playwright test --grep contract-tests",
    "test:security": "playwright test --grep security-tests",
    "test:performance": "playwright test --grep performance",
    "test:mobile": "playwright test --project=mobile-safari --project=mobile-chrome",
    "test:report": "playwright show-report",
    "lighthouse": "lhci autorun",
    "lighthouse:mobile": "LIGHTHOUSE_DEVICE=mobile lhci autorun",
    "lighthouse:desktop": "LIGHTHOUSE_DEVICE=desktop lhci autorun",
    "qa:full": "npm run test && npm run lighthouse",
    "qa:smoke": "npm run test:smoke && npm run lighthouse:mobile",
    "qa:guard": "npm run test:smoke && npm run test:contract && npm run test:security && npm run lighthouse"
  },
  "dependencies": {
    "@netlify/blobs": "^6.5.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@lhci/cli": "^0.12.0",
    "typescript": "^5.0.0"
  }
}